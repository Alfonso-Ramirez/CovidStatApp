<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignmentjava2.covidstatsapp.controller.MainController">
    <TextField fx:id="countryInput" promptText="Enter country name" style="-fx-font-size: 18px; -fx-alignment: center; -fx-font-weight: bold;" />
    <Button text="Get COVID-19 Stats" onAction="#handleGetStats" style="-fx-font-size: 18px; -fx-alignment: center; -fx-font-weight: bold;" />
    <ListView fx:id="countryList" style="-fx-font-size: 18px; -fx-alignment: center; -fx-font-weight: bold;"/>
    <Button text="Get COVID-19 Details Stats" onAction="#handleGetDetails" style="-fx-font-size: 18px; -fx-alignment: center; -fx-font-weight: bold;" />
</VBox>
